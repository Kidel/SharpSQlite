@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-3">
        <h2>Database Test</h2>
        <ul>
            <li>@((Model.Error) ? "Unknown" : Model.Data.Title)</li>
            <li>@((Model.Error) ? "Unknown" : Model.Data.Content)</li>
            <li>@((Model.Error) ? "Unknown" : Model.Data.Slug)</li>
            <li>@((Model.Error) ? "From Unknown Blog" : "From Blog: " + Model.Data.Blog.Name)</li>
            <li>@((Model.Error) ? "From Unknown Author" : "Author: " + Model.Data.Author.FirstName + " " + Model.Data.Author.LastName)</li>
        </ul>
    </div>
</div>
